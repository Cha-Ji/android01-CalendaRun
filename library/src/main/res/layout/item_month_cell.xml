<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_month_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_calendar_line_05px">

    <TextView
        android:id="@+id/tv_month_day"
        android:layout_width="0dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_month_day"
        app:layout_constraintEnd_toEndOf="@id/tv_month_day"
        app:layout_constraintStart_toStartOf="@id/tv_month_day"
        app:layout_constraintTop_toTopOf="@id/tv_month_day">

        <View
            android:id="@+id/view_isToday"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_calendar_today" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_month_schedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_month_day" />

    <View
        android:id="@+id/view_month_selectFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_month_date_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
